real nota,i = 1,media = 0

  para(i; i <= 5; i++){
  escreva("informe sua nota: ")
  leia(nota)
  media = media + nota}
  se((media/5) >= 7)
    {escreva("APROVADO!")}
  senao se((media/5) >= 4 e (media/5) <= 6 ou (media/5) < 7)
    {escreva("RECUPERAÇÃO!")}
  senao
    {escreva("REPROVADO!")}
  escreva("\n Media Final: ", media/5) 

